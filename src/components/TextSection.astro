<header id="header">
    <nav>
        <ul id="menu">
            <li data-id="1" class="menu-item">capitulo 1</li>
            <li data-id="2" class="menu-item">capitulo 2</li>
            <li data-id="3" class="menu-item">capitulo 3</li>
            <li data-id="4" class="menu-item">capitulo 4</li>
            <li data-id="5" class="menu-item">capitulo 5</li>
            <li data-id="6" class="menu-item">capitulo 6</li>
            <li data-id="7" class="menu-item">capitulo 7</li>
            <li data-id="8" class="menu-item">capitulo 8</li>
        </ul>
    </nav>
</header>
<section class="text-section">
    <div id="selected-item-container" class="selected-item-container">
        <h1 id="selected-item" class="selected-item"></h1>
    </div>
    <div id="selected-item-text" class="selected-item-text"></div>
</section>
<style>
    header {
        width: 100%;
        height: 100vh;
        padding: 2rem;
        transition: all 0.3s ease;
        /* Para animar el cambio de tamaño */
    }

    header.large {
        padding: 80px;
        /* Doble tamaño */
    }

    nav ul {
        list-style-type: none;
        display: grid;
        grid-template-columns: repeat(2, 1fr); /* Crea 2 columnas */
    }

    nav ul li {
        display: flex;
        margin: 2.5rem 10px;
        height: 4rem;
        border-radius: 0.7rem;
        text-align: center;
        color: var(--red);
        padding: 10px 15px;
        cursor: pointer;
        background-color: var(--beige);
        justify-content: center;
        align-items: center;
        transition: all 0.3s ease-out;
    }

    nav ul li:hover {
        color: var(--cream-white);
        background-color: var(--brown);
    }

    nav ul li.hidden {
        display: none;
        /* Oculta el ítem seleccionado */
    }
</style>
