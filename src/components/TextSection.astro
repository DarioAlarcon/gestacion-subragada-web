        {
            numero: "8",
            titulo: "capitulo 8",
            info: "",
        },
    ];
    // Seleccionar todos los ítems del menú
    const menuItems = document.querySelectorAll(".menu-item");

    // Seleccionar el contenedor del ítem seleccionado
    const selectedItemContainer = document.getElementById("selected-item");

    // Seleccionar el header
    const header = document.getElementById("header");
    const lista = document.getElementById("menu");

    // Función para verificar si hay un ítem seleccionado
    function checkSelected() {
        const isAnyHidden = document.querySelector(".menu-item.hidden");

        if (isAnyHidden) {
            // Si hay un ítem oculto, el header vuelve a tamaño normal
            header.classList.remove("large");
            lista.classList.remove("large");
            menuItems.forEach((i) => i.classList.remove("large"));
        } else {
            // Si no hay ninguno seleccionado, duplicar el tamaño del header
            header.classList.add("large");
            lista.classList.add("large");
            menuItems.forEach((i) => i.classList.add("large"));
        }
    }

    // Añadir un evento click a cada ítem
    menuItems.forEach((item, indice) => {
        item.addEventListener("click", () => {
            // Mostrar el ítem seleccionado en el cuerpo de la página
            const selectedText = itemsinfo[indice].titulo;
            selectedItemContainer.textContent = selectedText;

            // Ocultar el ítem seleccionado del header
            menuItems.forEach((i) => i.classList.remove("hidden")); // Mostrar todos
            menuItems.forEach((i, index) => {
                i.textContent = itemsinfo[index].numero;
            }); // Mostrar todos
            item.classList.add("hidden"); // Ocultar el seleccionado

            // Verificar si hay selección
            checkSelected();
        });
    });

    // Verificar inicialmente si no hay selección
    checkSelected();
</script>
